<h1>Records</h1>
<div class="btn-group">
  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
    <i class="glyphicon glyphicon-plus glyphicon-white"></i> New record <span class="caret"></span>
  </a>
  <div class="dropdown-menu">
    <div class="container-fluid">
      <div class="well well-md">
        <%= render 'record' %>
      </div>
    </div>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Value</th>
      <th>TTL</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @records.each do |record| %>
    <tr>
      <td><%= record[:name] %></td>
      <td><%= record[:type] %></td>
      <td><%= record[:value] %></td>
      <td><%= record[:ttl] %></td>
      <td>
        <%= link_to icon_button('Delete', :remove),
          delete_record_path(@zone_id, record[:id]),
          class: "btn btn-danger btn-xs",
          method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

