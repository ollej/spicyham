<h1>Records</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Value</th>
      <th>TTL</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @records.each do |record| %>
    <tr>
      <td><%= record[:name] %></td>
      <td><%= record[:type] %></td>
      <td><%= record[:value] %></td>
      <td><%= record[:ttl] %></td>
      <td>
        <%= link_to icon_button('Delete', 'remove'),
          delete_record_path(@zone_id, record[:id]),
          class: "btn btn-danger btn-mini",
          method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="container-fluid">
  <div class="well">
    <h2>Add new record</h2>
    <%= render 'record' %>
  </div>
</div>
