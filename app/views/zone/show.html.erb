<h1>Records</h1>
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Value</th>
    <th>TTL</th>
    <th></th>
  </tr>
  <% @records.each do |record| %>
    <tr>
      <td><%= record[:name] %></td>
      <td><%= record[:type] %></td>
      <td><%= record[:value] %></td>
      <td><%= record[:ttl] %></td>
      <td>
        <%= link_to '<i class="icon-remove"></i> Delete'.html_safe,
          delete_record_path(@zone_id, record[:id]), class: "btn btn-danger",
          method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<div class="well">
  <h2>Add new record</h2>
  <%= render 'record' %>
</div>
