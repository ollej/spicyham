<h1>Records</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Value</th>
    <th>TTL</th>
  </tr>
  <% @records.each do |record| %>
    <tr>
      <td><%= record[:name] %></td>
      <td><%= record[:type] %></td>
      <td><%= record[:value] %></td>
      <td><%= record[:ttl] %></td>
    </tr>
  <% end %>
</table>

<%= render 'record' %>
