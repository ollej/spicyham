<h1>Email forwards</h1>

<div class="btn-group">
  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-plus icon-white"></i> New forwarding <span class="caret"></span></a>
  <div class="dropdown-menu">
    <div class="container-fluid">
      <div class="well well-sm">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Address</th>
      <th>Destinations</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email[:source] %><span class="muted">@<%= @domain %></span></td>
        <td><%= email[:destinations].join(', ') %></td>
        <td>
          <%= link_to icon_button('Delete', 'remove'), email_path(email[:source]),
            class: "btn btn-danger btn-mini",
            method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

