<h1>Email forwards</h1>

<div class="email_create">
  <%= render 'form' %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Address</th>
      <th>Destinations</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email['source'] %><span class="text-muted">@<%= @email_domain %></span></td>
        <td><%= email['destinations'].join(', ') %></td>
        <td>
          <%= link_to icon_button('Delete', :remove), email_path(email['source']),
            class: 'btn btn-danger btn-xs',
            method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><a href="?all=1">List all emails</a></p>

