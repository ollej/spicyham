<h1>Domain list</h1>
<div class="container-fluid domain_search">
  <%= render 'domain_form' %>
</div>
<div class="domain_results"></div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Domain</th>
      <th>Created</th>
      <th>Updated</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
  <% @domains.each do |domain| %>
    <tr>
      <td><%= domain[:fqdn] %></td>
      <td><%= domain[:date_created].to_formatted_s(:db) %></td>
      <td><%= domain[:date_updated].to_formatted_s(:db) %></td>
      <td><%= domain[:status].join(', ') %></td>
    </tr>
  <% end %>
  </tbody>
</table>

