<h1>Domain list</h1>
<div class="btn-group">
  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-search icon-white"></i> Search domain <span class="caret"></span></a>
  <div class="dropdown-menu">
    <div class="container-fluid">
      <div class="well well-sm">
        <%= render 'domain_form' %>
      </div>
    </div>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Domain</th>
      <th>Created</th>
      <th>Updated</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
  <% @domains.each do |domain| %>
    <tr>
      <td><%= domain[:fqdn] %></td>
      <td><%= domain[:date_created].to_formatted_s(:db) %></td>
      <td><%= domain[:date_updated].to_formatted_s(:db) %></td>
      <td><%= domain[:status].join(', ') %></td>
    </tr>
  <% end %>
  </tbody>
</table>

